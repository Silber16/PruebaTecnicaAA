@model AppCore.DTOs.CreateProductDTO

<h2>Añadir Producto</h2>

<form asp-controller="Product" asp-action="CreateProduct" method="post">
    <div>
        <label>Codigo</label>
        <input asp-for="ProductId" />
    </div>
    <div>
        <label>Descripcion</label>
        <input asp-for="ProductDescription" />
    </div>
    <div>
        <label>Categoria</label>
        <select asp-for="CategoryProductId">
            <option value="">Seleccione una categoria</option>
            @foreach (var category in (SelectList)ViewData["Categories"])
            {
                <option value="@category.Value">@category.Text</option>
            }
        </select>
    </div>
    <div>
        <label>Stock</label>
        <input asp-for="Stock" />
    </div>
    <div>
        <label>Dto. Web</label>
        <input type="checkbox" asp-for="HaveECDiscount" />
    </div>
    <div>
        <label>Precio</label>
        <input type="number" asp-for="Price" />
    </div>
    <div>
        <label>Activo</label>
        <input type="checkbox" asp-for="IsActive" />
    </div>
    <button type="submit">Confirmar</button>
    <button type="button" onclick="window.location.href='@Url.Action("Index", "Product")'">Cancelar</button>
</form>
