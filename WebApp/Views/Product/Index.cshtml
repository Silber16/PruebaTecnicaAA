@model IEnumerable<AppCore.DTOs.ProductDTO>



<h2>Lista de productos</h2>

<a asp-controller="Product" asp-action="CreateProduct"><button>Nuevo</button></a>

<table>
    <thead>
        <tr>
            <th>Id Producto</th>
            <th>Descripcion</th>
            <th>Categoria</th>
            <th>Stock</th>
            <th>Precio Unitario</th>
            <th>Descuento Web</th>
            <th>Activo/Inactivo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prod in Model)
        {
            <tr>
                <td>@prod.ProductId</td>
                <td>@prod.ProductDescription</td>
                <td>@prod.CategoryDescription</td>
                <td>@prod.Stock</td>
                <td>@prod.Price</td>
                <td>@prod.HaveECDiscount</td>
                <td>@prod.IsActive</td>
                <td>
                    <button asp-asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@prod.ProductId".ProductId">Editar</button>
                    <button onclick="removeProduct('@prod.ProductId')">Eliminar</button>
                </td>
            </tr>
        }
    </tbody>
</table>


<script>

    async function removeProduct(id) {
        if (confirm("¿Estás seguro de que quieres eliminar este producto?")) {
            try {
                const response = await fetch(`/Product/RemoveProduct/${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                if (response.ok) {
                    location.reload(); 
                } else {
                    alert("Error al eliminar el producto.");
                }
            } catch (error) {
                console.error("Error en la solicitud:", error);
            }
        }
    }
</script>